# AUTH SERVICE - Variables d'environnement

# Copiez ce fichier en .env.properties et modifiez les valeurs
# cp .env.properties.example .env.properties

# Configuration du serveur
AUTH_SERVICE_PORT=8081

# Configuration de la base de données MySQL
DB_HOST=localhost
DB_PORT=3306
DB_NAME=auth_db
DB_USERNAME=your_username
# Pour un mot de passe vide, laisser vide après le =
# Exemple: DB_PASSWORD=
DB_PASSWORD=your_secure_password

# Configuration JPA/Hibernate
# Options: create, create-drop, update, validate, none
JPA_DDL_AUTO=update
# Afficher les requêtes SQL dans les logs (true/false)
JPA_SHOW_SQL=false

# Configuration JWT
# Clé secrète pour signer les tokens (min 256 bits en Base64)
# Générer une clé sécurisée: openssl rand -base64 64
JWT_SECRET=VotreCleSecreteTresLongueEtComplexe
# Durée access token en ms (900000 = 15 min)
JWT_ACCESS_EXPIRATION=900000
# Durée refresh token en ms (604800000 = 7 jours)
JWT_REFRESH_EXPIRATION=604800000

# Configuration des logs
# Niveaux: TRACE, DEBUG, INFO, WARN, ERROR
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SECURITY=INFO
LOG_LEVEL_SQL=INFO
LOG_FILE_PATH=logs/auth-service.log

# Configuration Swagger/OpenAPI
# Désactiver en production (false)
SWAGGER_ENABLED=true

# Configuration du nettoyage des tokens (expression CRON)
# Par défaut: tous les jours à 2h du matin
TOKEN_CLEANUP_CRON=0 0 2 * * ?
